<%= form_for [:dashboard, @trip_log] do |f| %>
  <% if @trip_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip_log.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @trip_log.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <p><%= f.label :title%></p>
    <p><%= f.text_field :title, placeholder: "Enter A Trip Name"%></p>
  </div>
  <div class="form-group">
    <p><%= f.label :miles%></p>
    <p><%= f.number_field :miles%></p>
  </div>
  <div class="form-group">
    <p><%= f.label 'Description'%></p>
    <p><%= f.text_area(:description, placeholder: "Enter your trip description here.", size: "30x3") %></p>
  </div>
  <div>
    <%= f.submit "Create Trip Log", class: "btn btn-primary"%>
  </div>
<% end %>
