<%= form_for [:dashboard, @trip_log] do |f| %>
  <% if @trip_log.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip_log.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @trip_log.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title%>
    <%= f.text_field :title, placeholder: "Enter A Trip Name"%>
  </div>
  <div class="form-group">
    <%= f.label :miles%>
    <%= f.number_field :miles%>
  </div>
  <div class="form-group">
    <%= f.label 'Description'%>
    <%= f.text_area(:description, placeholder: "Enter your trip description here.", size: "10x6") %>
  </div>
  <div class="submit-button">
    <%= f.submit "Create Trip Log" %>
  </div>
<% end %>
