<div class="form">
  <%= form_tag create_search_path, id: "search-form" do %>
    <p><%= label_tag :ev_range, "Your EV Range (in miles):" %></p>
    <p><%= select_tag :ev_range, options_for_select(ranges), class: "form-control" %></p>
    <p><%= label_tag :activity, "Activity:" %></p>
    <p><%= select_tag :activity, options_for_select(activities), class: "form-control" %></p>
    <p><%= label_tag :search_location, "Enter Zip Code:" %></p>
    <p><%= text_field_tag :search_location, nil, placeholder: "Enter Zip", id: "search-location", class: "form-control" %></p>
    <p><%= button_tag "Use Current Location", type: "button", id: "current-location", class: "btn btn-primary" %></p>
    <p><%= submit_tag "Search", id: "submit-search", class: "btn btn-primary" %></p>
  <% end %>
</div>
<%= javascript_include_tag 'event_listeners' %>
